<h1><%= @cocktail.title %></h1>

	<p><strong>Ingredients: </strong><%= @cocktail.ingredients %></p><br/>
				<p><strong>Preparation: </strong><%= @cocktail.preparation %><br/><br/>

					<%= link_to 'Edit', edit_cocktail_path(@cocktail) if cocktail_owner?(@cocktail) %>
					<%= link_to ' / Destroy', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } if cocktail_owner?(@cocktail) %>


<div class="jumbotron">
	<div class="container">
		<div class="row" style="margin-bottom:20px;">
			<h3 class="text-center text primary">Check Weather Before Drinking!</h3>
				<span id="error"></span>
		</div>

	<div class="row form-group form-inline" id="rowDiv"> 
		<input type="text" name="city" id="city" class="form-control" placeholder="City Name">
		<button id="submitWeather" class="btn btn-primary">Search City</button>
	</div>
		<div id="show"></div>
	</div>
</div>